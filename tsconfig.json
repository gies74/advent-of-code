{
  "compilerOptions": {
    "outDir": "./out",              
    "rootDir": "./src",
    "target": "ES5",             
    "sourceMap": true,
    "incremental": true,
    "noResolve": false,
    "noEmitOnError": false,
    "declaration": true,              
    "downlevelIteration": true,
    "moduleResolution": "node",
    "skipLibCheck": true     
  }
}
