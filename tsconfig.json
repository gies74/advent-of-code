{
  "compilerOptions": {
    "outDir": "./out",              
    "rootDir": "./src",
    "target": "ES5",             
    "sourceMap": true,
    "incremental": true,
    "noResolve": false,
    "noEmitOnError": false,
    "noImplicitAny": true,
    "declaration": true,              
    "downlevelIteration": true,
    "moduleResolution": "node",
    "skipLibCheck": true     
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
