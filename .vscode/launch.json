    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "Prep",
            "request": "launch",
            "program": "${workspaceFolder}\\src\\app.ts",
            "args": ["14"],
            "preLaunchTask": "npm: build",
            "sourceMaps": true,
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        },
        {
            "type": "node",
            "name": "Run",
            "request": "launch",
            "program": "${file}",
            "preLaunchTask": "npm: build",
            "sourceMaps": true,
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        }
    ]
}